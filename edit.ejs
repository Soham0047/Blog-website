<%- include("partials/header", { title: "Edit Post" }) %>
<main>
    <div class="form-container">
        <form action="/edit/<%= post.id %>" method="POST">
            <input type="text" name="title" value="<%= post.title %>" placeholder="Post Title" required>
            <textarea name="content" placeholder="Write your content here..." required><%= post.content %></textarea>
            <button type="submit">Save Changes</button>
        </form>
    </div>
</main>
<%- include("partials/footer") %>
