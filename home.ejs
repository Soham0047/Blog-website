<%- include("partials/header", { title: "Home" }) %>
    <div class="container">
        <% if (posts.length > 0) { %>
            <ul class="posts-list">
                <% posts.forEach(post => { %>
                    <li class="post">
                        <h2><%= post.title %></h2>
                        <p><%= post.content %></p>
                        <div class="actions">
                            <form action="/edit/<%= post.id %>" method="GET">
                                <button class="button">Edit</button>
                            </form>
                            <form action="/delete/<%= post.id %>" method="POST">
                                <button class="button delete">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <div class="no-posts">
                <p>No posts available yet. <a href="/create">Create a new post</a>.</p>
            </div>
        <% } %>
    </div>
<%- include("partials/footer") %>
